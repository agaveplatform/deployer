#!/bin/bash

echo "Updating /etc/apache2/sites-enabled/default-ssl.conf with core proxy port info"

sed -i 's#agaveapi.co/files#agaveapi.co:{{ core_api_port }}/files#g' /etc/apache2/sites-enabled/default-ssl.conf
sed -i 's#agaveapi.co/jobs#agaveapi.co:{{ core_api_port }}/jobs#g' /etc/apache2/sites-enabled/default-ssl.conf
sed -i 's#agaveapi.co/postits#agaveapi.co:{{ core_api_port }}/postits#g' /etc/apache2/sites-enabled/default-ssl.conf
sed -i 's#agaveapi.co/transforms#agaveapi.co:{{ core_api_port }}/transforms#g' /etc/apache2/sites-enabled/default-ssl.conf
sed -i 's#agaveapi.co/tenants#agaveapi.co:{{ core_api_port }}/tenants#g' /etc/apache2/sites-enabled/default-ssl.conf

apache2ctl -k graceful